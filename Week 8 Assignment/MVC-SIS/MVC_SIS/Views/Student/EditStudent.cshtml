@*@model Exercises.Models.Data.Student*@

@model Exercises.Models.ViewModels.StudentVM

@{
    ViewBag.Title = "EditStudent";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Edit Student (inEditStudent.cshtml)</h3>
        @Html.ActionLink("Return to List", "List", "Student")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
        @Html.HiddenFor(m => m.Student.StudentId)
        <div class="form-group">

            <label></label>
            @Html.TextBoxFor(m => m.Student.FirstName, new { @class = "form-control", placeholder = "m.Student.FirstName" })
            @Html.TextBoxFor(m => m.Student.LastName, new { @class = "form-control", placeholder = "m.Student.LastName" })<br />


            @*@{string crntMajor = "Select a major";}*@
            @{string crntMajor = this.Html.ViewData.Model.Student.Major.MajorName.ToString();}

            @Html.DropDownListFor(m => m.Student.Major.MajorId, Model.MajorItems, @crntMajor, new { @class = "form-control" })

            @*@Html.DropDownListFor(m => m.Student.Major.MajorId, Model.MajorItems, "-Choose One-", new { @class = "form-control" })*@



            @*@Html.TextBoxFor(m => m.Student.Major.MajorName, new { @class = "form-control", placeholder = "m.Student.Major.MajorName" })*@
            @Html.TextBoxFor(m => m.Student.GPA, new { @class = "form-control", placeholder = "m.Student.GPA" })
        </div>
        <button type="submit" class="btn btn-sm btn-primary">Save</button>
        }
    </div>
</div>

